  </servlet>

  <servlet-mapping>
    <servlet-name>deleteProductById</servlet-name>
    <url-pattern>/deleteProductById</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>findAllProducts</servlet-name>
    <servlet-class>app.servlets.product.FindAllProductsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>findAllProducts</servlet-name>
