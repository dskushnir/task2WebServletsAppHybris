  <servlet-mapping>
    <servlet-name>findOrderById</servlet-name>
    <url-pattern>/findOrderById</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>orderEntryUpdate</servlet-name>
    <servlet-class>app.servlets.order.OrderEntryUpdateServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>orderEntryUpdate</servlet-name>
    <url-pattern>/orderEntryUpdate</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>addProduct</servlet-name>
    <servlet-class>app.servlets.product.AddProductServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>addProduct</servlet-name>
    <url-pattern>/addProduct</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteAllProducts</servlet-name>
    <servlet-class>app.servlets.product.DeleteAllProductsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>deleteAllProducts</servlet-name>
    <url-pattern>/deleteAllProducts</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>deleteProductById</servlet-name>
