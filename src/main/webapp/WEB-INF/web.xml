<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>addOrder</servlet-name>
    <servlet-class>app.servlets.order.AddOrderServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>addOrder</servlet-name>
    <url-pattern>/addOrder</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>findAllOrders</servlet-name>
    <servlet-class>app.servlets.order.FindAllOrdersServlet</servlet-class>
